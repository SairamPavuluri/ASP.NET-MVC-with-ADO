@model EmpwithADO.Models.Employee
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h2 class="text-center">Enter New Employee</h2>
        <form action="" method="Post">
            <div class="form-group">
                <label for="EId">Enter Employee Number</label>
                <br />
                <input type="text" class="form-control" id="EmpId" placeholder="Enter Eno" name="EmpId">
            </div>
            <div class="form-group">
                <label for="EmpName">Enter Employee Name</label>
                <br />
                <input type="text" class="form-control" id="EmpName" placeholder="Enter EmpName" name="EmpName">
            </div>
            <div class="form-group">
                <label for="EmpDeptId">Enter Employee DeptID</label>
                <br />
                <input type="text" class="form-control" id="EmpDeptId" placeholder="Enter DeptID" name="DepID">
            </div>
            <div class="form-group">
                <label for="Salary">Enter Employee Salary</label>
                <br />
                <input type="text" class="form-control" id="Salary" placeholder="Enter Salary" name="Salary">
            </div>
            <div class="form-group">
                <label for="Email">Enter Employee Email</label>
                <br />
                <input type="email" class="form-control" id="Email" placeholder="Enter email" name="Email">
            </div>
            <div class="form-group">
                <label for="City">Enter Employee City</label>
                <br />
                <input type="text" class="form-control" id="City" placeholder="Enter City" name="City">
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    @{ 
        if(IsPost)
        {
            @ViewBag.Msg
        }
    }
</body>
</html>
